<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
  <TextView
        android:text="STATUS:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50.0dp"
        android:layout_marginRight="50.0dp"
        android:layout_marginLeft="50.0dp"
        android:textColor="#fff"
        android:id="@+id/textView1" />

  <TextView
    android:text="NOT CONNECTED"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50.0dp"
    android:layout_marginRight="50.0dp"
    android:layout_marginLeft="10.0dp"
    android:textAlignment="textEnd"
    android:textColor="#f44"
    android:width="500dp"
    android:id="@+id/status" />

  <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100.0dp"
    android:layout_marginRight="50.0dp"
    android:layout_marginLeft="50.0dp"
    android:text="192.168.0.21"
    android:textAlignment="center"
    android:id="@+id/ipText" />

    <Button
      android:text="Connect"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:id="@+id/shutdown"
      android:layout_marginTop="145.0dp"
      android:layout_marginRight="50.0dp"
      android:layout_marginLeft="50.0dp"
      android:height="70.0dp"
      android:width="600.0px"/>

      <Button
        android:text="Shutdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/shutdown"
        android:layout_marginTop="250.0dp"
        android:layout_marginRight="50.0dp"
        android:layout_marginLeft="50.0dp"
        android:height="100.0dp"
        android:width="600.0px"/>

      <Button
        android:text="VOL +"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/vol-up"
        android:layout_marginTop="350.0dp"
        android:layout_marginRight="50.0dp"
        android:layout_marginLeft="370.0px"
        android:height="100.0dp"
        android:width="300.0px"/>

    <Button
        android:text="VOL -"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/vol-down"
        android:layout_marginTop="350.0dp"
        android:layout_marginRight="0.0dp"
        android:layout_marginLeft="100.0px"
        android:width="285.0px"
        android:height="100dp "
        android:layout_width="wrap_content" />

      <Button
      android:text="Pause/Play"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:id="@+id/shutdown"
      android:layout_marginTop="450.0dp"
      android:layout_marginRight="50.0dp"
      android:layout_marginLeft="50.0dp"
      android:height="100.0dp"
      android:width="300.0dp"/>





</androidx.coordinatorlayout.widget.CoordinatorLayout>
