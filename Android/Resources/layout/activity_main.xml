<?xml version="1.0" encoding="utf-8"?>

<GridLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:columnCount="3"
  android:rowCount="10">

  <TextView
    android:layout_column="0"
    android:layout_row="0"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="10dp"
    android:text="@string/not_connected"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#f44"
    android:id="@+id/status" />

  <EditText
    android:layout_column="0"
    android:layout_row="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:layout_margin="10dp"
    android:layout_marginBottom="0dp"
    android:text="@string/ip"
    android:id="@+id/ipText"
    android:inputType="text"
    android:textAlignment="center" />

  <Button
    android:layout_marginTop="0dp"
    android:layout_margin="10dp"
    android:layout_column="0"
    android:layout_row="2"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_gravity="fill"
    android:text="@string/connect"
    android:id="@+id/connect" />

  <Button
    android:layout_margin="10dp"
    android:layout_column="0"
    android:layout_row="3"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:layout_gravity="fill"
    android:text="@string/shutdown"
    android:id="@+id/shutdown" />

  <Button
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:layout_gravity="fill"
    android:layout_column="0"
    android:layout_row="4"
    android:text="@string/vol_up"
    android:id="@+id/vol-up" />

  <Button
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:layout_gravity="fill"
    android:layout_column="0"
    android:layout_row="5"
    android:text="@string/vol_mute"
    android:id="@+id/vol-mute" />


  <Button
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:layout_gravity="fill"
    android:layout_column="0"
    android:layout_row="6"
    android:text="@string/vol_down"
    android:id="@+id/vol-down" />

  <Button
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:layout_gravity="fill"
    android:layout_column="0"
    android:layout_row="7"
    android:text="@string/pause_play"
    android:id="@+id/pause-play" />


</GridLayout>